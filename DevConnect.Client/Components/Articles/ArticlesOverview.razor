@rendermode InteractiveServer

<h1 class="text-2xl font-bold mb-4">Articles</h1>

<!-- Add Article Button -->
<div class="mb-4">
    <button class="px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
            @onclick="ShowCreateForm">
        + Add Article
    </button>
</div>

<div class="flex gap-6">

    <!-- Article List -->
    <div class="w-1/3 space-y-2">
        @if (Articles == null || !Articles.Any())
        {
            <p class="text-sm opacity-70">No articles available.</p>
        }
        else
        {
            @foreach (var article in Articles)
            {
                <div class="p-2 border border-gray-300 rounded hover:bg-gray-100 cursor-pointer flex justify-between items-center"
                     @onclick="() => SelectArticle(article)">
                    <span>@article.Title</span>
                    <div class="flex gap-1">
                        <button class="px-2 py-1 bg-yellow-400 text-white rounded hover:bg-yellow-500 text-xs"
                                @onclick="@(e => EditArticle(article))">
                            Edit
                        </button>
                        <button class="px-2 py-1 bg-red-500 text-white rounded hover:bg-red-600 text-xs"
                                @onclick="@(e => ConfirmDelete(article))">
                            Delete
                        </button>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Article Detail -->
    <div class="flex-1 border border-gray-200 rounded p-4">
        @if (SelectedArticle != null)
        {
            <h2 class="text-xl font-semibold mb-2">@SelectedArticle.Title</h2>
            <p class="text-xs text-gray-500 mb-2">By @SelectedArticle.Author | @SelectedArticle.PublishedDate.ToShortDateString()</p>
            <p class="text-sm">@SelectedArticle.Content</p>
        }
        else
        {
            <p class="text-sm text-gray-400">Select an article to view details.</p>
        }
    </div>
</div>

<!-- Simple Create/Edit Form -->
@if (ShowForm)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-30">
        <div class="bg-white rounded-xl shadow-lg w-full max-w-md p-6">
            <h2 class="text-lg font-semibold mb-4">@FormTitle</h2>

            <div class="space-y-3">
                <div>
                    <label class="block text-sm mb-1">Title</label>
                    <input class="w-full border px-3 py-2 rounded" @bind="EditingArticle.Title" />
                </div>
                <div>
                    <label class="block text-sm mb-1">Author</label>
                    <input class="w-full border px-3 py-2 rounded" @bind="EditingArticle.Author" />
                </div>
                <div>
                    <label class="block text-sm mb-1">Content</label>
                    <textarea class="w-full border px-3 py-2 rounded" rows="5" @bind="EditingArticle.Content"></textarea>
                </div>
                <div>
                    <label class="block text-sm mb-1">Published Date</label>
                    <input type="date" class="w-full border px-3 py-2 rounded" @bind="EditingArticle.PublishedDate" />
                </div>
            </div>

            <div class="flex justify-end gap-2 mt-4">
                <button class="px-3 py-2 bg-green-600 text-white rounded hover:bg-green-700" @onclick="SaveArticle">Save</button>
                <button class="px-3 py-2 bg-gray-400 text-white rounded hover:bg-gray-500" @onclick="CancelForm">Cancel</button>
            </div>
        </div>
    </div>
}

<!-- Simple Delete Confirmation -->
@if (ShowDelete)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-30">
        <div class="bg-white rounded-xl shadow-lg w-full max-w-sm p-6">
            <p>Are you sure you want to delete <strong>@ArticleToDelete?.Title</strong>?</p>
            <div class="flex justify-end gap-2 mt-4">
                <button class="px-3 py-2 bg-red-600 text-white rounded hover:bg-red-700" @onclick="DeleteArticleConfirmed">Delete</button>
                <button class="px-3 py-2 bg-gray-400 text-white rounded hover:bg-gray-500" @onclick="CancelDelete">Cancel</button>
            </div>
        </div>
    </div>
}