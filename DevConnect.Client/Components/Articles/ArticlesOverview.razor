@rendermode InteractiveServer

<Breadcrumb />

<h1 class="text-2xl font-bold mb-4">Articles</h1>


<!-- Add Article Modal -->
<Modal Title="Create Article" ButtonText="Create Article" OnSave="SaveArticleAsync">
    <Body>
        <div class="space-y-3">
            <div>
                <label class="block text-sm mb-1">Title</label>
                <input class="w-full border px-3 py-2 rounded" @bind="EditingArticle.Title" />
            </div>
            <div>
                <label class="block text-sm mb-1">Author</label>
                <input class="w-full border px-3 py-2 rounded" @bind="EditingArticle.Author" />
            </div>
            <div>
                <label class="block text-sm mb-1">Content</label>
                <textarea class="w-full border px-3 py-2 rounded" rows="5" @bind="EditingArticle.Content"></textarea>
            </div>
            <div>
                <label class="block text-sm mb-1">Published Date</label>
                <input type="date" class="w-full border px-3 py-2 rounded" @bind="EditingArticle.PublishedDate" />
            </div>
        </div>
    </Body>
</Modal>

<div class="container-fluid mt-4">

    @if (Articles == null || !Articles.Any())
    {
        <div class="text-center text-muted py-5">
            <p>No articles available.</p>
        </div>
    }
    else
    {
        <div class="row g-6">

            @foreach (var article in Articles.Skip((CurrentPage - 1) * PageSize).Take(PageSize))
            {
                <div class="col-12">
                    <div class="card shadow-sm border-0 hover-shadow cursor-pointer transition">
                        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">

                            <!-- Article Info -->
                            <div @onclick="() => NavigateToArticleDetail(article)" class="flex-grow-1 mb-2 mb-md-0">
                                <h5 class="card-title mb-1">@article.Title</h5>
                                <p class="card-subtitle text-muted small mb-0">
                                    By @article.Author | @article.PublishedDate.ToShortDateString()
                                </p>
                            </div>

                            <!-- Actions aligned right -->
                            <div class="d-flex gap-2 ms-md-3 flex-shrink-0">
                                <!-- Edit Modal -->
                                <Modal Title="Edit Article" ButtonText="Edit" OnSave="() => SaveArticleAsync(article)" ModalButtonColor="orange">
                                    <Body>
                                        <div class="mb-3">
                                            <label class="form-label">Title</label>
                                            <input class="form-control form-control-sm" @bind="article.Title" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Author</label>
                                            <input class="form-control form-control-sm" @bind="article.Author" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Content</label>
                                            <textarea class="form-control form-control-sm" rows="4" @bind="article.Content"></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Published Date</label>
                                            <input type="date" class="form-control form-control-sm" @bind="article.PublishedDate" />
                                        </div>
                                    </Body>
                                </Modal>

                                <!-- Delete Modal -->
                                <Modal Title="Delete Article" ButtonText="Delete" OnSave="() => DeleteArticleConfirmedAsync(article)" ModalButtonColor="darkred">
                                    <Body>
                                        <p>Are you sure you want to delete <strong>@article.Title</strong>?</p>
                                    </Body>
                                </Modal>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Articles.Count > PageSize)
        {
            <nav class="mt-4 d-flex justify-content-center">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="#" @onclick="PrevPage">Previous</a>
                    </li>
                    @for (int i = 1; i <= TotalPages; i++)
                    {
                        <li class="page-item @(i == CurrentPage ? "active" : "")">
                            <a class="page-link" href="#" @onclick="() => GoToPage(i)">@i</a>
                        </li>
                    }
                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                        <a class="page-link" href="#" @onclick="NextPage">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>